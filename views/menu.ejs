<!DOCTYPE html>
<html lang="en">
<head>
  <title>Menu Page</title>
</head>

<%- include('partials/_header') -%>
<body>
  <% for (food of menu) { %>
    <form action="/order/1" method="post">

      <article class="menu">
          <div class="menu_preview">
            <div class="top_line">
              <p>$<%= food.price %></p>
              <button type="submit" class="btn btn-primary mb-3 ">
                <!-- <a class="order-page" href="/order">
                  Add to Cart
                </a>-->
                <input type="hidden" id="id" name="id" value=<%= food.id %>>

          <input type="hidden" id="price" name="price" value=<%= food.price %>>
              </button>
            </div>
            <img class="food_image" src="<%= food.picture_url %>">
            <h5 class="food_name"><%= food.name %></h5>
            <p><%= food.description %></p>
          </div>
      </article>
    </form>
  <% } %>

</body>




